datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Booking {
  createdAt   DateTime  @default(now())
  customer    Customer? @relation(fields: [customerId], references: [id])
  customerId  String?
  date        DateTime?
  dropoffTime DateTime?
  id          String    @id @default(cuid())
  pet         Pet?      @relation(fields: [petId], references: [id])
  petId       String?
  pickupTime  DateTime?
  serviceType String?
  updatedAt   DateTime  @updatedAt
}

model Pet {
  age        Int?
  bookings   Booking[]
  breed      String?
  createdAt  DateTime  @default(now())
  customer   Customer? @relation(fields: [customerId], references: [id])
  customerId String?
  id         String    @id @default(cuid())
  name       String?
  updatedAt  DateTime  @updatedAt
}

model Customer {
  bookings  Booking[]
  createdAt DateTime  @default(now())
  email     String?
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  pets      Pet[]
  updatedAt DateTime  @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
